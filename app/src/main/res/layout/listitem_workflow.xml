<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="42dp"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/workflow_label"
        android:layout_width="120dp"
        android:layout_height="match_parent"
        android:layout_gravity="center_vertical"/>

    <LinearLayout
        android:id="@+id/workflow_item1_input"
        android:layout_width="wrap_content"
        android:layout_height="match_parent">
        <EditText
            android:id="@+id/workflow_item1_value"
            android:layout_width="120dp"
            android:layout_height="match_parent"
            android:inputType="number"/>
        <TextView
            android:id="@+id/workflow_item1_unit"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:textAlignment="gravity"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/workflow_item2_input"
        android:layout_width="wrap_content"
        android:layout_height="match_parent">
        <EditText
            android:id="@+id/workflow_item2_value"
            android:layout_width="120dp"
            android:layout_height="match_parent"
            android:inputType="number"/>
        <TextView
            android:id="@+id/workflow_item2_unit"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:textAlignment="gravity"/>
    </LinearLayout>

</LinearLayout>
