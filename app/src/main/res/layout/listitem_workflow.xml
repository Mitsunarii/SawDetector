<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="42dp"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/workflow_label"
        android:layout_width="120dp"
        android:layout_height="match_parent"
        android:gravity="center"
        android:textColor="@android:color/holo_red_light"
        android:textSize="18sp"
        android:textStyle="bold" />

    <LinearLayout
        android:id="@+id/workflow_item1_input"
        android:layout_width="wrap_content"
        android:layout_height="match_parent">

        <EditText
            android:id="@+id/workflow_item1_value"
            android:layout_width="120dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:inputType="number"
            android:textSize="18sp" />
        <TextView
            android:id="@+id/workflow_item1_unit"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textColor="@android:color/holo_red_light"
            android:gravity="center"
            android:textSize="18sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/workflow_item2_input"
        android:layout_width="wrap_content"
        android:layout_height="match_parent">

        <EditText
            android:id="@+id/workflow_item2_value"
            android:layout_width="120dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:inputType="number"
            android:textSize="18sp" />
        <TextView
            android:id="@+id/workflow_item2_unit"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textColor="@android:color/holo_red_light"
            android:textSize="18sp" />
    </LinearLayout>

</LinearLayout>
